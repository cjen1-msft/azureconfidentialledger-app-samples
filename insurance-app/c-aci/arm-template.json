{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the deployment group."
      }
    },
    "primary-image": {
      "type": "string",
      "defaultValue": "mcr.microsoft.com/mirror/docker/library/ubuntu:20.04",
      "metadata": {
        "description": "Container image to deploy. Should be of the form repoName/imagename:tag for images stored in public Docker Hub, or a fully qualified URI for other registries. Images from private registries require additional registry credentials."
      }
    },
    "sidecar-image": {
      "type": "string",
      "defaultValue": "confidentialsidecars.azurecr.io/attestation/sidecar",
      "metadata": {
        "description": "Confidential attestation sidecar image."
      }
    },
    "ssh": {
      "type": "string",
      "metadata": {
        "description": "SSH key for access"
      }
    },
    "acr-token": {
      "type": "string",
      "metadata": {
        "description": "Access token for ACR if necessary"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2022-10-01-preview",
      "name": "[parameters('name')]",
      "location": "northeurope",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "sku": "Confidential",
        "restartPolicy": "Never",
        "osType": "Linux",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": "22"
            }
          ],
          "type": "Public"
        },
        "volumes": [
          {
            "name": "attest-uds",
            "emptyDir": {}
          }
        ],
        "confidentialComputeProperties": {
          "ccePolicy": ""
        },
        "imageRegistryCredentials": [{
          "server": "cjensentest1.azurecr.io",
          "username": "00000000-0000-0000-0000-000000000000",
          "password": "[parameters('acr-token')]"
        }],
        "containers": [
          {
            "name": "[format('{0}-main', parameters('name'))]",
            "properties": {
              "image": "[parameters('primary-image')]",
              "command": [
                "/bin/sh",
                "-c",
                "echo $SSH_ADMIN_KEY >> /root/.ssh/authorized_keys && service ssh start && pip install --break-system-packages -r /src/requirements.txt && tail -f /dev/null"
              ],
              "ports": [
                {
                  "protocol": "TCP",
                  "port": "22"
                }
              ],
              "environmentVariables": [
                {
                  "name": "SSH_ADMIN_KEY",
                  "value": "[parameters('ssh')]"
                }
              ],
              "volumeMounts": [
                {
                  "name": "attest-uds",
                  "mountPath": "/mnt/uds"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 4,
                  "cpu": 4
                }
              }
            }
          },
          {
            "name": "[format('{0}-attestation-sidecar', parameters('name'))]",
            "properties": {
              "image": "[parameters('sidecar-image')]",
              "command": ["app", "-socket-address", "/mnt/uds/sock"],
              "volumeMounts": [
                {
                  "name": "attest-uds",
                  "mountPath": "/mnt/uds"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1,
                  "cpu": 1
                }
              }
            }
          }
        ],
      }
    }
  ]
}
